@using Nop.Web.Framework;
@using System.Web.Mvc.Html;

@{
    Layout = "";

    string tmpTopic = Html.Action("TopicBlock", "Topic", new { systemName = "MonerisPaymentInfoText" }).ToString().TrimEnd();
    tmpTopic = tmpTopic.Substring(0, tmpTopic.Length - 19).TrimEnd();

    while (tmpTopic.EndsWith("<br />"))
    {
        tmpTopic = tmpTopic.Substring(0, tmpTopic.Length - 6).TrimEnd();
    }

    tmpTopic = tmpTopic + "</div> </div>";
}

<table width="100%" cellpadding="0" cellspacing="0">
    <tr style="vertical-align:middle">
        <td>                        
            @(
                new Nop.Web.Framework.Localization.LocalizedString(Server.HtmlDecode(tmpTopic))
            )            
        </td>
    </tr>
</table>
